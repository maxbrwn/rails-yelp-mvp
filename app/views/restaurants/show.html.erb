<h2>Welcome to <%= @restaurant.name %> </h2>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <%@restaurant.reviews.each do |review|%>
  <li class="list-group-item">
    <%= review.content %>
  </li>
  <br>
  <li class="list-group-item">
    <%= review.rating %>
  </li>
  <% end %>
</ul>
<br>
<div>
  <%= link_to "Create a new review", new_restaurant_review_path(@restaurant) %>
  <br>
  <%= link_to "Delete restaurant", restaurant_path(@restaurant), data: {turbo_method: :delete, turbo_confirm: "Are your sure?"} %>
  <br>
  <%= link_to "Back restaurant overview", restaurants_path %>
</div>
